* {
  font-family: helvetica, arial, sans-serif;
}

body {
  margin: 16px;
  font-size: small;
}

.needsauth { display: none; }
.guestonly { display: none; }
#user-id { font-weight: bold; }

#container {
  width: 1000px;
  margin: 0 auto;
}

.section {
  margin-bottom: 24px;
  position: relative;
}

#user-panel {
  float: right;
}

a, a:visited {
  color: #00a;
}

#top {
  height: 64px;
}

#logo {
  width: 64px;
  height: 64px;
  vertical-align: middle;
  margin-right: 10px;
}

h1 {
  font-size: 24px;
  font-weight: bold;
  display: inline;
}

h2 {
  padding-left: 12px;
  display: inline;
  color: #888;
  margin-top: 0;
}

#not-logged-in-text {
  text-align: center;
  border: 1px solid silver;
  padding: 80px;
  font-size: 24px;
  font-weight: bold;
  color: #444;
}

#middle {
  position: relative;
  height: 500px;
}

#loading-image {
  float: right;
  display: none;
}

#left-panel, #map3d {
  height: 498px;
}

#left-panel {
  position: absolute;
  left: 0;
  top: 0;
  border: 0;
  width: 290px;
  border: 1px solid #fff;
}

#edit-buttons {
  padding-top: 4px;
}

#map-detail {
  position: absolute;
  width: 268px;
  left: 0;
  top: 50px;
  height: 428px;
  border: 1px solid silver;
  padding: 10px;
  overflow-y: scroll;
}

#left-panel li {
  margin: 8px 0;
  padding: 3px 0;
  position: relative;
  min-height: 26px; /* + padding = 32px */
}

#left-panel .basics {
  padding-left: 38px;
}

#left-panel li .feature-icon {
  position: absolute;
  left: 0;
  top: 0;
}

#error-message {
  color: #a00;
  font-weight: bold;
  display: none;
}

.feature-icon,
.feature-icon img {
  width: 32px;
  height: 32px;
  border: 0;
  line-height: 0;
}

.feature-icon .poly {
  width: 18px;
  height: 18px;
  margin: 5px;
  /* leave room for a 2px border */
}

#map3d {
  position: absolute;
  left: 300px;
  top: 0;
  border: 1px solid silver;
  width: 698px;
}

#map3d h3 { /* balloon */
  font-weight: bold;
  font-size: 110%;
  margin-bottom: 4px;
}

#bottom {
  float: right;
  color: #888;
}

#dummy-img { display: none; }
